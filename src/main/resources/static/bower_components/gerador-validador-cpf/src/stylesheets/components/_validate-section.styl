.validate-section
  &__label
    display block

  &__submit-button
    display: block
    background-color: darken($bg-color, 60%)
    adjust-font-size-to($base-font-size - 2, 2)

    &:hover:not([disabled])
      background-color: darken($bg-color, 50%)

    @media (max-width: em($tablet))
      width: 100%

  &__input

    &--valid
      color: $cor = green
      border-color: lighten($cor, 70%)
      background: lighten($cor, 70%)
      transition: all ease 1s


    &--invalid
      color: $cor = red
      border-color: lighten($cor, 70%)
      background: lighten($cor, 70%)
      transition: all ease 1s

#validate-section__input--to-format,
.validate-section__input--message
  @media (max-width: em($tablet))
      width: 100%
