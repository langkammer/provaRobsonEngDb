.generate-section
  &__copy-button
    text-transform: lowercase
    rhythm-padding(.25)
    adjust-font-size-to($base-font-size)
    trailer(.5)
    background-color: darken($bg-color, 60%)

    &:hover:not([disabled])
      background-color: darken($bg-color, 50%)

    @media (max-width: em($tablet))
      width: 100%

  &__input--generated
    @media (max-width: em($tablet))
        width: 100%

  &__submit-button
    display: block
    background-color: darken($bg-color, 60%)
    trailer(.5)
    adjust-font-size-to($base-font-size - 2, 2)

    &:hover:not([disabled])
      background-color: darken($bg-color, 50%)

    @media (max-width: em($tablet))
      width: 100%
